<div class="container">
    <div class="card">

        <div class="row">
            <div class="col-sm-5">
                <img src="../../public/img/profileTakodachi.png" class="rounded" alt="Imagen de perfil">

                <button type="button" class="btn btn-primary btn-block my-2">
                    Cambiar foto de perfil
                </button>
                <button type="submit" class="btn btn-primary btn-block my-2">
                    Guardar cambios
                </button>

            </div>
            <div class="col">

                <div class="card-body">
                    <div>
                        <a>Nombre</a>
                        <input type="text" class="form-control my-1" value={{name}}>
                    </div>
                    <div>
                        <a>Apellido paterno</a>
                        <input type="text" class="form-control my-1" value={{last_name}}>
                    </div>
                    <div>
                        <a>Apellido materno</a>
                        <input type="text" class="form-control my-1" value={{second_last_name}}>
                    </div>
                    <div>
                        <a>N&uacute;mero telef&oacute;nico</a>
                        <input type="tel" class="form-control my-1" value={{phone}}>
                    </div>
                    <div>
                        <a>Direcci&oacute;n</a>
                        <input type="text" class="form-control my-1" value={{address}}>
                    </div>
                    <div>
                        <a>Curp</a>
                        <input type="text" class="form-control my-1" value={{curp}}>
                    </div>
                    <div>
                        <a>RFC</a>
                        <input type="text" class="form-control my-1" value={{rfc}}>
                    </div>
                </div>
            </div>

        </div>
        <div class="col">
            <div class="card border-white">
                <h5 class="card-title">
                    Informaci&oacute;n del plantel
                </h5>
                <div class="card-body pt-1">
                    <div>
                        <a class="pt-1">Fecha de ingreso: </a>
                        <input type="date" class="form-control my-1" value={{admission}}>
                    </div>
                    <div>
                        <a class="ml-2">Perfil Principal: </a>
                        <input type="text" class="form-control my-1" value={{profile}}>
                    </div>
                    <div>
                        <a class="ml-2">Grado m√°ximo de estudios: </a>
                        <select name="academicDegree" id="academicDegree" class="form-control my-1">
                            <option value="licenciatura">
                                Licenciatura
                            </option>
                            <option value="maestria">
                                Maestr&iacute;a
                            </option>
                            <option value="doctorado">
                                Doctorado
                            </option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</div>