<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header bg-dark text-white">
                Registro de cuenta
            </div>
            <div class="card-body">
                <form action="/signup" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre(s)*" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="last_name" placeholder="Apellido Paterno*"
                            value="{{last_name}}">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="second_last_name" placeholder="Apellido Materno"
                            value="{{second_last_name}}">
                    </div>
                    <hr class="mt-2 mb-3 black"/>
                    <div class="form-group">
                        <input type="email" class="form-control" name="username" placeholder="Usuario*"
                            value="{{username}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contrase&ntilde;a*"
                            value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password"
                            placeholder="Confirmar Contrase&ntilde;a" value="{{confirm_password}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-custom btn-block">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>