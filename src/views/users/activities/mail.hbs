<div class="container p-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/sendEmail" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-2.5">
                                    <label for="mailSelect" class="pl-3 py-1">Enviar a: </label>
                                </div>
                                <div class="col">
                                    <select name="mailSelect" id="mailSelect" class="form-control py-1">
                                        <option value="Favoritos" selected>
                                            Correo Favorito
                                        </option>
                                        <option value="Institucionales">
                                            Correo Institucional
                                        </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" name="subject" class="form-control" placeholder="Asunto" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="message" rows="5" class="form-control" placeholder="Message"></textarea>
                        </div>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" name="files" id="inputGroup" multiple="multiple">
                            </div>
                        </div>
                        <div class="pt-3">
                            <button class="btn btn-primary btn-block">
                                Enviar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>